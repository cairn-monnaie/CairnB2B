{# src/Cairn/UserBundle/Resources/views/Card/associate_card.html.twig #}         
                                                                               
{% extends "CairnUserBundle::layout.html.twig" %}                        
                                                                               
{% block title %}{% endblock %}                                                                 
                                                                               
{%block stylesheets %}
{% endblock %}
{% block body %}
    {{parent()}} 
    
    <h2>Associer {{user.name}} à une carte de sécurité </h2>
    <h3>Saisir le code </h3>
    <div>                                                                          
        {{ form_start(form) }}
            <div class="input-field col s12">
                {{ form_widget(form.code) }}
                {{ form_label(form.code) }}
            </div>
            <div class="row">
                {{ form_widget(form.add,{'attr': {'class': 'btn green'}}  ) }}
                {{ form_label(form.add) }}
                {% if user.hasReferent(app.user) and user.isFirstLogin() == true and user.hasRole('ROLE_PRO') %}
                        <a class="waves-effect waves-teal btn right-align" href="{{ path('cairn_user_push_registration', {'id' : user.id}) }}"><i class="material-icons right">arrow_forward</i>Continuer</a>
                {% endif %}

            </div>

        {{form_end(form) }}
    </div> 
{% endblock %}              

{% block javascripts %}
{% endblock %}


