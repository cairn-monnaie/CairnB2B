{# src/Cairn/UserBundle/Resources/views/Admin/helloasso_credit.html.twig #}         
                                                                               
{% extends "CairnUserBundle::layout.html.twig" %}                        
                                                                               
{% block title %}{% endblock %}                                                                 
                                                                               
{%block stylesheets %}
{% endblock %}

{% block body %}
    <div class="section">
      {{ form_start(formSearch) }}
        {{ form_rest(formSearch) }}
    {{ form_end(formSearch) }}
    </div>

    <div class="section">
      {{ form_start(formSync) }}
        {{ form_rest(formSync) }}
    {{ form_end(formSync) }}
    </div>

    {% if payments is defined %} 
        {% for payment in payments %}

          <div class="col s12 m6 l4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title center">{{payment.id}}</span>
                    <p>
                        début : {{payment.date|date('d-m H:i')}} 
                        <br>
                        montant : {{payment.amount}} CRN
                    </p>
                </div>
            </div>
          </div>
        {% else %}  
            Aucun paiement via Helloasso ne correspond à votre recherche !
        {% endfor %}
    {% endif %}
{% endblock %}

