{% block title %}{% endblock %}                                                                 
                                                                               
{%block stylesheets %}
{% endblock %}

{% block body %}
    {{parent()}} 

    <ul>
        {% for user in listUsers %} 
                <li> {{user.name }}
        {% else %}
            Aucun membre à supprimer !
        {% endfor %}
    </ul>

    <div class="body_wrapper">
        <div id="confirm_action"> <em>Confirmer la suppression de tous ces membres </em> </div>
        Attention, cette opération est définitive. 
        {{ form_start(form) }}                                                       
         {{ form_rest(form) }}                                                        
        {{form_end(form) }}   
    </div>
{% endblock %}              

{% block javascripts %}
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
