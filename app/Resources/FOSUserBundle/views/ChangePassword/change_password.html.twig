{% extends "@FOSUser/layout.html.twig" %}
 
 {% block fos_user_content %}
 {% include "@FOSUser/ChangePassword/change_password_content.html.twig" %}
 {% endblock fos_user_content %}

{% block javascripts %}

<script>
    jQuery(function ($) {
        $inputNewPassword = $('[id*="fos_user_change_password_form_plainPassword"]')

        $newPasswordFirst = $('input#fos_user_change_password_form_plainPassword_first')
        $newPasswordSecond = $('input#fos_user_change_password_form_plainPassword_second')

        $inputNewPassword.each(function() {
            $(this).on('input', function (){
                if($newPasswordFirst.val() != $newPasswordSecond.val()){
                    $newPasswordSecond.css({'background-color':'yellow','opacity': '0.5'});
                }else{
                    $newPasswordSecond.css({'background-color':'transparent'});
                }
            });
        });

    });
</script>

{% endblock %}

