
{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <h2 class="center-align">Inscription {%  if (app.session.get('registration_type') == "person") %}particulier{% elseif(app.session.get('registration_type') == "pro") %}pro{% endif %}</h2>

    <div class= "center-align">
        <b>Pas encore adhérent ?</b>  <br>
        <a class="waves-effect waves-light btn orange" href="{{ register_url }}"  target="_blank">Adhérer</a>
    </div>

    <br>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_errors(form) }}
    <div class="input-field col s12 m4">
        {{ form_errors(form.email) }}
        <i class="material-icons prefix">mail_outline</i>
        {{ form_widget(form.email) }}
        {{ form_label(form.email) }}
    </div>
    {% if form.firstname is defined %}
        <div class="input-field col s12 m4">
            <i class="material-icons prefix">person_outline</i>
            {{ form_errors(form.firstname) }}
            {{ form_widget(form.firstname) }}
            {{ form_label(form.firstname) }}
        </div>
        <div class="input-field col s12 m4">
            <i class="material-icons prefix hide-on-med-and-up"></i>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_label(form.name) }}
        </div>
    {% else %}
        <div class="input-field col s12 m4">
            {{ form_errors(form.name) }}
            <i class="material-icons prefix">person_outline</i>
            {{ form_widget(form.name) }}
            {{ form_label(form.name) }}
        </div>
    {% endif %}
    <div class="col s12 m6">
        <div class="row">
            <div class="input-field col s12">
                {{ form_errors(form.address.street1) }}
                <i class="material-icons prefix">home</i>
                {{ form_widget(form.address.street1) }}
                {{ form_label(form.address.street1) }}
            </div>
            <div class="input-field col s12">
                {{ form_errors(form.address.street2) }}
                <i class="material-icons prefix"></i>
                {{ form_widget(form.address.street2) }}
                {{ form_label(form.address.street2) }}
            </div>
            <div class="input-field col s12">
                {{ form_errors(form.address.zipCity) }}
                <i class="material-icons prefix">place</i>
                {{ form_widget(form.address.zipCity) }}
                {{ form_label(form.address.zipCity) }}
            </div>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="row">
    {% if form.image is defined %}
        <div class="col s12">
            {{ form_errors(form.image) }}
            {{ form_label(form.image) }}
        </div>
        <div class="col s12">
            {{ form_widget(form.image) }}
        </div>
    {% endif %}
            <div class="col s12">
                {{ form_errors(form.identityDocument) }}
                {{ form_label(form.identityDocument) }}
            </div>
            <div class="col s12">
                {{ form_widget(form.identityDocument) }}
            </div>
        </div>
    </div>
    <div class="input-field col s12">
        {{ form_errors(form.description) }}
        <i class="material-icons prefix">message</i>
        {{ form_widget(form.description) }}
        {{ form_label(form.description) }}
    </div>
    <div class="col s6">
        <label>
            <input type="checkbox" name="terms" value="Yes" required/>
            <span>J'ai lu et j'accepte <a href="{{ cgu_url }}" target="_blank">les CGU du [e]-cairn</a></span>
        </label>
    </div>
    <div class="col s6 right-align">
        <button type="submit"class="btn">Inscription</button>
    </div>
    {{ form_end(form) }}
</div>
<br>
<br>
